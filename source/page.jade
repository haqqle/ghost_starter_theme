|{{!< default }}
// This is a page template. A page outputs content just like any other post,
// and has all the same attributes by default, but you can also customise it to behave differently if you prefer.

//Everything inside the #post tags pulls data from the page
|{{#post }}

header.main-header.post-head(class="{{#unless image }} no-cover {{/unless }}", style="{{#if image }} background-image: url({{ image }}) {{/if }}")

  nav.main-nav.clearfix(class='{{#if image }}overlay{{/if }}')

    |{{#if @blog.logo }}
    a.blog-logo(href='{{ @blog.url }}')
      img(src='{{ @blog.logo }}', alt='{{ @blog.title }}')
    |{{/if}}

    |{{#if @blog.navigation}}
    a.menu-button.icon-menu(href='#')
      span.word Menu
    |{{/if}}

main.content(role='main')

  article(class='{{post_class}}')

    header.post-header
      h1.post-title {{title}}

    section.post-content
      |{{content}}

|{{/post}}
