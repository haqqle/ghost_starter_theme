| {{!< default}}
// The tag above means - insert everything in this file into the {body} of the default.hbs template }}

// If we have a tag cover, display that - else blog cover - else nothing }}
header.main-header.tag-head(class="{{#unless tag.image }} no-cover {{/unless }}", style="{{#if tag.image }} background-image: url({{ tag.image }}) {{/if }}")

  nav.main-nav.overlay.clearfix

    |{{#if @blog.logo }}
    a.blog-logo(href='{{ @blog.url }}')
      img(src='{{ @blog.logo }}', alt='{{ @blog.title }}')
    |{{/if}}

    |{{#if @blog.navigation }}
    a.menu-button.icon-menu(href='#')
      span.word Menu
    |{{/if }}

  .vertical
    .main-header-content.inner
      h1.page-title {{ tag.name }}
      h2.page-description

        |{{#if tag.description }}
        |{{ tag.description }}

        |{{ else }}
        |A {{ pagination.total }}-post collection

        |{{/if}}

// The main content area on the homepage
main.content(role='main')
  // The tag below includes the post loop - partials/loop.hbs
  |{{> "loop"}}
