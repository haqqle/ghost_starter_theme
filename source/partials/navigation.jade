.nav
  h3.nav-title Menu
  a.nav-close(href='#')
    span.hidden Close

  ul
    |{{#foreach navigation }}

    li(class='nav-{{ slug }} {{#if current }} nav-current {{/if }}', role='presentation')
      a(href="{{ url absolute='true' }}") {{ label }}

    |{{/foreach }}

  a.subscribe-button.icon-feed(href='{{ @blog.url }}/rss/') Subscribe
  span.nav-cover
