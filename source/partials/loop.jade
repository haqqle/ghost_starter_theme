
// Previous/next page links - only displayed on page 2+
.extra-pagination.inner
  |{{ pagination }}

// This is the post loop - each post will be output using this markup
|{{#foreach posts }}

article(class='{{ post_class }}')

  header.post-header
    h2.post-title
      a(href='{{ url }}') {{{ title }}}

  section.post-excerpt
    p
      a.read-more(href='{{ url }}')
        | {{ excerpt words="26" }}

  footer.post-meta
    |{{#if author.image}}
    img.author-thumb(src='{{ author.image }}', alt='{{ author.name }}', nopin='nopin')
    |{{/if}}

    |{{ author }}
    |{{ tags prefix=" on "}}
    time.post-date(datetime="{{date format='YYYY-MM-DD'}}") {{ date format="DD.MM.YYYY" }}

|{{/foreach }}

// Previous/next page links - displayed on every page
|{{ pagination }}
